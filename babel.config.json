{
    "presets": [
        "@babel/preset-env",
        "@babel/preset-typescript",
        "@babel/preset-react"
    ],
    "plugins": [
        [
            "@babel/plugin-transform-react-jsx",
            {
                "runtime": "automatic"
            }
        ],
        [
            "module-resolver",
            {
                "root": [
                    "./src"
                ],
                "alias": {
                    "@assets": "./src/assets",
                    "@svg-library": "./src/style-foundations/svg-library/_sprites.svg",
                    "@components": "./src/components",
                    "@foundations": "./src/style-foundations/scss",
                    "@layouts": "./src/layouts",
                    "@pages": "./src/pages",
                    "@services": "./src/services"
                }
            }
        ]
    ]
}